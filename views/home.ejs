<%- include("./partials/header")%>
    <div class="container home">
        <form action="/" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="lang" class="form-label">Select language:</label>
                <select name="language" class="form-select" id="lang">
                    <option selected value="c">C</option>
                    <option value="cc">C++</option>
                    <option value="java">Java</option>
                    <option value="javascript">JavaScript</option>
                    <option value="python">Python</option>
                    <option value="csharp">C#</option>
                </select>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="comment" name="comment" class="form-control" placeholder="abc">
                <label for="comment">Enter Comment</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" id="search-term" name="searchTerm" class="form-control" placeholder="abc">
                <label for="search-term">Enter Search Term</label>
            </div>
            <div class="mb-3">
                <label for="file" class="form-label">Upload Files:</label>
                <input type="file" id="file" name="files" class="form-control" multiple required>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary d-block">Submit</button>
            </div>
        </form>
    </div>


    <%- include("./partials/footer")%>